<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.college.yi.EcSite.admin.repository.CategoryMapper">

  <select id="findById" resultType="com.college.yi.EcSite.entity.Category">
    SELECT * FROM categories WHERE category_id = #{categoryId}
  </select>

  <select id="findByIds" resultType="com.college.yi.EcSite.entity.Category">
    SELECT * FROM categories WHERE category_id IN
    <foreach item="id" collection="categoryIds" open="(" separator="," close=")">
      #{id}
    </foreach>
  </select>
</mapper>
