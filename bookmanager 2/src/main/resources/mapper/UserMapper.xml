<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.college.yi.ecsite.front.repository.UserMapper">

    <select id="findByEmail" resultType="com.college.yi.ecsite.entity.User">
        SELECT id, email, password, name, role
        FROM users
        WHERE email = #{email}
    </select>

</mapper>
