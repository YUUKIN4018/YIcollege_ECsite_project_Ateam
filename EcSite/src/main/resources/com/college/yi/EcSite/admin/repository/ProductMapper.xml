<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.college.yi.EcSite.admin.repository.ProductMapper">
    <select id="findAll" resultType="com.college.yi.EcSite.entity.Product">
        SELECT * FROM products
    </select>
    
    <insert id="insert" parameterType="com.college.yi.EcSite.entity.Product" useGeneratedKeys="true" keyProperty="productId">
        INSERT INTO products (
            shop_id,
            category_id,
            name,
            description,
            price,
            tax_rate,
            stock_quantity,
            status,
            created_at,
            updated_at
        ) VALUES (
            #{shopId},
            #{categoryId},
            #{name},
            #{description},
            #{price},
            #{taxRate},
            #{stockQuantity},
            #{status},
            #{createdAt},
            #{updatedAt}
        )
    </insert>
    
    <select id="findById" resultType="com.college.yi.EcSite.entity.Product" parameterType="long">
        SELECT * FROM products WHERE product_id = #{productId}
    </select>
    
    <update id="update" parameterType="com.college.yi.EcSite.entity.Product">
        UPDATE products
        SET name = #{name},
            price = #{price},
            updated_at = NOW()
        WHERE product_id = #{productId}
    </update>
</mapper>
